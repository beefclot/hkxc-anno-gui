{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "HKXC Annotation Editor",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "execute": true,
        "sidecar": false,
        "scope": [
          {
            "name": "hkxc-anno-cli",
            "cmd": "hkxc-anno-cli",
            "args": true
          },
          {
            "name": "hkxc",
            "cmd": "hkxc",
            "args": true
          }
        ]
      },
      "dialog": {
        "all": false,
        "open": true,
        "save": false
      },
      "fs": {
        "all": true,
        "scope": ["**"]
      }
    },
    "bundle": {
      "active": false,
      "icon": [
        "icons/icon.ico",
        "icons/icon.png"
      ],
      "identifier": "com.hkxc.anno.gui",
      "targets": []
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "HKXC Annotation Editor",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "fileDropEnabled": true
      }
    ]
  }
}

